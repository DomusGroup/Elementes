<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.domus.tankhah.elementes.simple_app.MainActivity">
    <com.domus.tankhah.elementes.lib.DCButton
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:text="سلام"
        android:layout_height="wrap_content" />
    <com.domus.tankhah.elementes.lib.DCCheckBox
        android:layout_width="wrap_content"
        android:text="سلام"
        android:layout_height="wrap_content" />
    <com.domus.tankhah.elementes.lib.DCEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:format="normal"
        android:hint="نرمال"
        />
    <com.domus.tankhah.elementes.lib.DCEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:format="normal_number_persian"
        android:hint="نرمال عددی"
        />
    <com.domus.tankhah.elementes.lib.DCEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:format="amount_persian"
        android:hint="مبلغ عددی"
        />
    <com.domus.tankhah.elementes.lib.DCRadioButton
        android:layout_width="wrap_content"
        android:text="رادیو"
        android:layout_height="wrap_content" />

</LinearLayout>
